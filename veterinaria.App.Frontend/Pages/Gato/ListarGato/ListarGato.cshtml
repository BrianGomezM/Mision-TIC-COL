@page
@model veterinaria.App.Frontend.Pages.ListarGatoModel
@{
}
<div class="bradcam_area breadcam_bg">
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <div class="bradcam_text text-center">
                      <h3>Listar De Gatos</h3>
                   </div>
              </div>
          </div>
      </div>
 </div>
  <!-- bradcam_area_end -->

   <!--================Blog Area =================-->
<section class="blog_area single-post-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="section-top-border">
                    <h3 class="mb-30">Lista De Gatos</h3>
                    <div class="progress-table-wrap">
                        <div class="progress-table">
                            <div class="table-head">
                                <div class="serial">#</div>
                                <div class="country">Nombre</div>
                                <div class="visit">Raza</div>
                                <div class="visit">Edad</div>
                                <div class="percentage">Color</div>
                            </div>
                            @foreach (var item in Model.Gatos){
                             <div class="table-row">
                                <div class="serial">@item.Id</div>
                                <div class="country">@item.Nombre</div>
                                <div class="visit">@item.Raza</div>
                                <div class="visit">@item.Edad</div>
                                <div class="percentage">@item.Color</div>
                                <!-- <button class="button button-contactForm boxed-btn" onclick="Model.EliminarGato()"></button> -->
                                 
                                 
                            </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3" style="margin-left: 300px;">
                    <a asp-page="../CrearGato/CrearGato"><button type="submit" class="button button-contactForm boxed-btn">Registrar Mascota</button></a>                   
                </div>                
            </div> 
        </div>
    </div>
</section>
   <!--================ Blog Area end =================-->
